{
    "name": "pokescript",
    "displayName": "PokéScript",
    "description": "PokéScript Language Support",
    "version": "1.0.1",
    "homepage": "https://gitlab.karathan.at/Karathan/vs-pokescript",
    "repository": {
        "type": "git",
        "url": "https://gitlab.karathan.at/Karathan/vs-pokescript"
    },
    "license": "MIT",
	"galleryBanner": {
		"color": "#0084A9",
		"theme": "dark"
    },
    "icon": "images/icon.png",
    "publisher": "karathan",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": ["Programming Languages"],
    "keywords": ["romhacking", "assembly", "pokescript"],
    "preview": true,

    "extensionDependencies": [
        "dan-c-underwood.arm"
    ],
    "contributes": {
        "grammars":[
            {
                "scopeName": "source.arm.pokescript",
                "path": "./syntaxes/pokescript.json",
                "injectTo": [ "source.arm" ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
